{% extends ('baseAdmin.html.twig') %}

    {% block main %}
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <section class="content-header">
                <h1>
                    Créer une réduction
                </h1>
                <ol class="breadcrumb">
                    <li><a href="{{ path ('Dashboard') }}"><em class="fa fa-dashboard"></em>Accueil</a></li>
                    <li><a href="#">Liste</a></li>
                    <li><a href="{{ path ('listeDiscount') }}">Gérer les réductions</a></li>
                    <li class="active">Créer une réduction</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h1>Ajouter une réduction</h1>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                {{ form_start(form) }}
                                    {{ form_widget(form) }}
                                <button type="submit" class="btn btn-success">Créer</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    {% endblock %}

